# ===================================
# 開發環境變數範本
# ===================================

# 應用設定
NODE_ENV=development
PORT=3001

# 資料庫設定 (Docker)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=social_platform
DB_USER=social_user
DB_PASSWORD=social_password123

# Redis 設定 (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 設定
JWT_SECRET=your_super_secret_jwt_key_please_change_in_production
JWT_EXPIRES_IN=7d

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# AWS 設定 (生產環境用)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=

# 其他設定
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=debug

COMPOSE_PROJECT_NAME=social-platform
