// frontend/src/components/EnhancedPostComposer.js
import React, { useState, useRef } from 'react';
import { useAuth } from '../context/AuthContext';
import { createPost } from '../services/postService';
import { uploadMultipleImages } from '../services/uploadService';

const EnhancedPostComposer = ({ onPostCreated }) => {
    const { user } = useAuth();
    const [content, setContent] = useState('');
    const [images, setImages] = useState([]);
    const [isPosting, setIsPosting] = useState(false);
    const [error, setError] = useState('');
    const fileInputRef = useRef(null);

    const getRoleColor = (role) => {
        switch (role) {
            case 'admin': return 'bg-red-500';
            case 'verified': return 'bg-blue-500';
            case 'regular': return 'bg-green-500';
            default: return 'bg-gray-500';
        }
    };

    const getRoleText = (role) => {
        switch (role) {
            case 'admin': return 'ÁÆ°ÁêÜÂì°';
            case 'verified': return 'Ë™çË≠âÁî®Êà∂';
            case 'regular': return '‰∏ÄËà¨Áî®Êà∂';
            default: return 'Áî®Êà∂';
        }
    };

    const handleImageUpload = (e) => {
        const files = Array.from(e.target.files);
        if (files.length + images.length > 4) {
            setError('ÊúÄÂ§öÂè™ËÉΩ‰∏äÂÇ≥ 4 ÂºµÂúñÁâá');
            return;
        }

        files.forEach(file => {
            if (file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    setImages(prev => [...prev, {
                        id: Date.now() + Math.random(),
                        file: file,
                        url: e.target.result,
                        uploaded: false // Ê®ôË®òÁÇ∫Êú™‰∏äÂÇ≥
                    }]);
                };
                reader.readAsDataURL(file);
            }
        });
    };

    const removeImage = (imageId) => {
        setImages(prev => prev.filter(img => img.id !== imageId));
    };

    // Êö´ÊôÇ‰øÆÂæ© EnhancedPostComposer.js ‰∏≠ÁöÑÂúñÁâá‰∏äÂÇ≥ÂïèÈ°å
    // ÂÖàËÆìÁ¥îÊñáÂ≠óË≤ºÊñáËÉΩÊ≠£Â∏∏ÁôºÂ∏É

    const handleSubmit = async (e) => {
        e.preventDefault();
        if ((!content.trim() && images.length === 0) || isPosting) return;

        setIsPosting(true);
        setError('');

        try {
            console.log('Submitting post with content:', content.trim());

            let imageUrl = null;

            // üîß Êö´ÊôÇË∑≥ÈÅéÂúñÁâá‰∏äÂÇ≥ÔºåËÆìÁ¥îÊñáÂ≠óË≤ºÊñáËÉΩÊ≠£Â∏∏ÁôºÂ∏É
            if (images.length > 0) {
                console.log('üö® ÂúñÁâá‰∏äÂÇ≥ÂäüËÉΩÊö´ÊôÇÂÅúÁî®ÔºåÂè™ÁôºÂ∏ÉÊñáÂ≠óÂÖßÂÆπ');
                setError('ÂúñÁâá‰∏äÂÇ≥ÂäüËÉΩÊö´ÊôÇÂÅúÁî®ÔºåÂÉÖÁôºÂ∏ÉÊñáÂ≠óÂÖßÂÆπ');
                // üîß Êö´ÊôÇË®ªËß£ÊéâÂúñÁâá‰∏äÂÇ≥ÈÇèËºØ
                /*
                console.log('Uploading images:', images.length);
                const imagesToUpload = images.map(img => img.file);
                const uploadResult = await uploadMultipleImages(imagesToUpload);
    
                if (uploadResult.success) {
                    console.log('Images uploaded successfully:', uploadResult.data);
                    imageUrl = uploadResult.data.images[0].url;
                } else {
                    console.error('Image upload failed:', uploadResult.error);
                    setError('ÂúñÁâá‰∏äÂÇ≥Â§±ÊïóÔºö' + uploadResult.error);
                    return;
                }
                */
            }

            // Ê∫ñÂÇôË≤ºÊñáÊï∏Êìö - üîß Êö´ÊôÇ‰∏çÂåÖÂê´ÂúñÁâá
            const postData = {
                content: content.trim()
                // üîß Êö´ÊôÇË®ªËß£ÊéâÂúñÁâá
                // ...(imageUrl && { imageUrl })
            };

            console.log('Calling createPost API with:', postData);
            const result = await createPost(postData);
            console.log('CreatePost result:', result);

            if (result.success) {
                console.log('Post created successfully:', result.data);

                // ÈÄöÁü•Áà∂ÁµÑ‰ª∂Êñ∞Ë≤ºÊñáÂ∑≤ÂâµÂª∫
                if (onPostCreated) {
                    onPostCreated(result.data.post);
                }

                // ÈáçÁΩÆË°®ÂñÆ
                setContent('');
                setImages([]); // üîß Ê∏ÖÁ©∫ÂúñÁâá
                setError('');

                // üîß Â¶ÇÊûúÊúâÂúñÁâáË¢´Ë∑≥ÈÅéÔºåÈ°ØÁ§∫ÊèêÁ§∫
                if (images.length > 0) {
                    setError('Ë≤ºÊñáÁôºÂ∏ÉÊàêÂäüÔºÅÂúñÁâáÂäüËÉΩÊ≠£Âú®‰øÆÂæ©‰∏≠„ÄÇ');
                }
            } else {
                console.error('Create post failed:', result.error);
                setError(result.error || 'ÁôºÂ∏ÉË≤ºÊñáÂ§±Êïó');
            }
        } catch (error) {
            console.error('ÁôºÂ∏ÉË≤ºÊñáÁï∞Â∏∏:', error);
            setError('ÁôºÂ∏ÉË≤ºÊñáÊôÇÁôºÁîüÈåØË™§ÔºåË´ãÁ®çÂæåÂÜçË©¶');
        } finally {
            setIsPosting(false);
        }
    };

    const canPost = (content.trim() || images.length > 0) && !isPosting;

    return (
        <div className="bg-white border-0 border-b border-gray-100 px-4 py-4">
            {/* ÈåØË™§ÊèêÁ§∫ */}
            {error && (
                <div className="mb-4 p-3 bg-red-50 border border-red-200 text-red-700 rounded-lg text-sm">
                    {error}
                </div>
            )}

            <form onSubmit={handleSubmit}>
                <div className="flex space-x-3">
                    {/* Áî®Êà∂È†≠ÂÉè */}
                    <div className="flex-shrink-0">
                        <div className="w-12 h-12 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center shadow-lg">
                            <span className="text-white font-semibold text-lg">
                                {user?.displayName?.charAt(0) || user?.username?.charAt(0)}
                            </span>
                        </div>
                    </div>

                    {/* Ëº∏ÂÖ•ÂçÄÂüü */}
                    <div className="flex-1">
                        <div className="flex items-center space-x-2 mb-3">
                            <span className="font-semibold text-gray-900">
                                {user?.displayName || user?.username}
                            </span>
                            <span className={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium text-white ${getRoleColor(user?.userRole)}`}>
                                {getRoleText(user?.userRole)}
                            </span>
                        </div>

                        <textarea
                            value={content}
                            onChange={(e) => setContent(e.target.value)}
                            placeholder="Êúâ‰ªÄÈ∫ºÊñ∞ÈÆÆ‰∫ãÔºü"
                            className="w-full p-0 border-0 resize-none focus:ring-0 text-lg placeholder-gray-400 bg-transparent"
                            rows="3"
                            maxLength="500"
                            style={{ outline: 'none' }}
                        />

                        {/* ÂúñÁâáÈ†êË¶ΩÂçÄÂüü */}
                        {images.length > 0 && (
                            <div className="mt-4">
                                <div className={`grid gap-2 rounded-2xl overflow-hidden ${images.length === 1 ? 'grid-cols-1' :
                                    images.length === 2 ? 'grid-cols-2' :
                                        images.length === 3 ? 'grid-cols-2' :
                                            'grid-cols-2'
                                    }`}>
                                    {images.map((image, index) => (
                                        <div
                                            key={image.id}
                                            className={`relative group ${images.length === 3 && index === 0 ? 'row-span-2' : ''
                                                }`}
                                        >
                                            <img
                                                src={image.url}
                                                alt={`È†êË¶Ω ${index + 1}`}
                                                className={`w-full object-cover ${images.length === 1 ? 'h-64' :
                                                    images.length === 3 && index === 0 ? 'h-full' :
                                                        'h-32'
                                                    }`}
                                            />
                                            <button
                                                type="button"
                                                onClick={() => removeImage(image.id)}
                                                className="absolute top-2 right-2 w-6 h-6 bg-black bg-opacity-50 text-white rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                                            >
                                                √ó
                                            </button>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}

                        {/* ÂäüËÉΩÊåâÈàïÂçÄÂüü */}
                        <div className="flex justify-between items-center mt-4 pt-3 border-t border-gray-100">
                            <div className="flex items-center space-x-4">
                                {/* ÂúñÁâá‰∏äÂÇ≥ */}
                                <button
                                    type="button"
                                    onClick={() => fileInputRef.current?.click()}
                                    className="p-2 text-blue-500 hover:bg-blue-50 rounded-full transition-colors"
                                    disabled={images.length >= 4}
                                >
                                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </button>

                                {/* GIF ÊåâÈàï */}
                                <button
                                    type="button"
                                    className="p-2 text-green-500 hover:bg-green-50 rounded-full transition-colors"
                                >
                                    <span className="text-sm font-bold">GIF</span>
                                </button>

                                {/* Ë°®ÊÉÖÁ¨¶Ëôü */}
                                <button
                                    type="button"
                                    className="p-2 text-yellow-500 hover:bg-yellow-50 rounded-full transition-colors"
                                >
                                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </button>

                                {/* Â≠óÊï∏Áµ±Ë®à */}
                                <span className="text-sm text-gray-400">
                                    {content.length}/500
                                </span>
                            </div>

                            {/* ÁôºÂ∏ÉÊåâÈàï */}
                            <button
                                type="submit"
                                disabled={!canPost}
                                className={`px-6 py-2 rounded-full font-semibold text-sm transition-all ${canPost
                                    ? 'bg-blue-500 text-white hover:bg-blue-600 shadow-md hover:shadow-lg'
                                    : 'bg-gray-200 text-gray-400 cursor-not-allowed'
                                    }`}
                            >
                                {isPosting ? 'ÁôºÂ∏É‰∏≠...' : 'ÁôºÂ∏É'}
                            </button>
                        </div>
                    </div>
                </div>

                {/* Èö±ËóèÁöÑÊñá‰ª∂Ëº∏ÂÖ• */}
                <input
                    ref={fileInputRef}
                    type="file"
                    accept="image/*"
                    multiple
                    onChange={handleImageUpload}
                    className="hidden"
                />
            </form>
        </div>
    );
};

export default EnhancedPostComposer;